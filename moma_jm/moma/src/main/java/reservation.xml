<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reservationns">
	<!-- 예매완료 -->
	<insert id="insert" parameterType="reservation">
		<selectKey keyProperty="rs_no" order="BEFORE" resultType="integer">
			select nvl(max(rs_no)+1) rs_no from reservation
		</selectKey>
			insert into reservation values(#{rs_no}, #{rsdate}, #{rstime},
			#{rsnum}, #{cinema}, #{payment}, , #{price}, #{mno}, #{cno})
	</insert>
	
	<!-- 예매취소 -->
	<delete id="delete" parameterType="integer">
		delete reservation where cno = #{cno}
	</delete>
</mapper>