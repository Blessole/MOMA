<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reservationns">
	<!-- 예매완료 -->
	<insert id="insert" parameterType="reservation">
		<selectKey keyProperty="rs_no" order="BEFORE" resultType="integer">
			select nvl(max(rsno), 0)+1 rsno from reservation
		</selectKey>
			insert into reservation values(#{rsno}, #{rsdate}, #{rstime},
			#{rsnum}, #{cinema}, #{payment}, 'n', #{price}, #{mno}, #{cno})
	</insert>
	
	<!-- 예매취소 -->
	<delete id="delete" parameterType="integer">
		delete reservation where cno = #{cno}
	</delete>
	
	<!-- 마이페이지 예매내역 리스트 -->
	<!-- <select id="list" parameterType="hashmap">
		select * from reservation where mno = #{mno}
	</select> -->
</mapper>